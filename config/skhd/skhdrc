### Focus on window 
alt - h : yabai -m window --focus west  || $(yabai -m window --focus west; yabai -m display --focus west)
alt - j : yabai -m window --focus south || $(yabai -m window --focus south; yabai -m display --focus south)
alt - k : yabai -m window --focus north || $(yabai -m window --focus north; yabai -m display --focus north)
alt - l : yabai -m window --focus east  || $(yabai -m window --focus east; yabai -m display --focus east)


### Niche window management
# rotate layout clockwise
alt - r : yabai -m space --rotate 270
# flip along y-axis
alt - y : yabai -m space --mirror y-axis
# flip along x-axis
alt - x : yabai -m space --mirror x-axis
# toggle window float
alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2


#change focus between external displays (left and right)
cmd + alt - n : yabai -m display --focus west
cmd + alt - p : yabai -m display --focus east

# move window to display left and right
# shift + alt - l : yabai -m window --display west; yabai -m display --focus west;
# shift + alt - h : yabai -m window --display east; yabai -m display --focus east;
 
# swap windows
ctrl + alt - h : yabai -m window --swap west  || $(yabai -m window --display west; yabai -m display --focus west)
ctrl + alt - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
ctrl + alt - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
ctrl + alt - l : yabai -m window --swap east  || $(yabai -m window --display east; yabai -m display --focus east)

# swap and warp windows
cmd + alt - h : yabai -m window --warp west  || $(yabai -m window --display west; yabai -m display --focus west)
cmd + alt - j : yabai -m window --warp south || $(yabai -m window --display south; yabai -m display --focus south)
cmd + alt - k : yabai -m window --warp north || $(yabai -m window --display north; yabai -m display --focus north)
cmd + alt - l : yabai -m window --warp east  || $(yabai -m window --display east; yabai -m display --focus east)

# maximize a window
ctrl + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
ctrl + alt - e : yabai -m space --balance

#move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

alt - 1 : yabai -m window --space 1 --focus
alt - 2 : yabai -m window --space 2 --focus 
alt - 3 : yabai -m window --space 3 --focus
alt - 4 : yabai -m window --space 4 --focus 
alt - 5 : yabai -m window --space 5 --focus  
alt - 6 : yabai -m window --space 6 --focus  
